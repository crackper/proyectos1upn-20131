@model IEnumerable<DBSystem.Entities.Producto>
<table>
    <tr>
        <th>
            Categoria
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stock)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descontinuado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Categoria.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stock)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descontinuado)
        </td>
        <td>
            @Ajax.ActionLink("Editar", "Index", new AjaxOptions() {
                  Url = Url.Action("Edit", new { id = item.Id }),
                  UpdateTargetId="upEdit",
                  OnSuccess = "OnSuccessEdit"
            }) |          

            @Ajax.ActionLink("Ver Detalles", "Index", new AjaxOptions() {
                  Url = Url.Action("Details", new { id = item.Id }),
                  UpdateTargetId="upDetails",
                  OnSuccess = "OnSuccessDetails"
            }) |
            @Ajax.ActionLink("Eliminar", "Index", new AjaxOptions()
               {
                   Url = Url.Action("Delete", new { id = item.Id }),
                   UpdateTargetId = "listProductos",
                   Confirm = "Desea Eliminar este producto?"
               })
        </td>
    </tr>
}

</table>
